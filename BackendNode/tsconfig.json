{
  "compilerOptions": {
    "target": "es2020",
  "lib": ["es2020", "esnext.asynciterable"],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "types": [
      "node",
      "jest",
      "mocha"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "outDir": "./build",
    "allowJs": true,
    "noEmit": false,
    "esModuleInterop": true,
    
  },
  "include": [
    "./src/**/*", "index.js"
  ],
  "exclude": [
    "node_modules",
    "tests"
  ]
}